<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_black_more_light"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/action_panel_goto_album"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/selectable_item_background_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GoTo"
                android:textColor="@color/text_secondary_light"
                android:textSize="13sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/action_panel_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reflection"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_gravity="bottom"/>
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingStart="24dp"
            android:paddingRight="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/selectable_item_background_black_light"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_queue_music"
                android:tint="@color/icon_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAYING QUEUE"
                android:textSize="20sp"
                android:textColor="@color/my_yellow"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/selectable_item_background_borderless">

            <ImageView
                android:id="@+id/icon_add_to_playlist"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_playlist_add"
                android:tint="@color/icon_light"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:text="ADD TO"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/selectable_item_background_borderless">

            <ImageView
                android:id="@+id/icon_edit_song_info"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_featured_play_list"
                android:tint="@color/icon_light"
                android:layout_marginTop="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:text="EDIT INFO"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/selectable_item_background_borderless">

            <ImageView
                android:id="@+id/icon_equalizer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_equalizer"
                android:tint="@color/icon_light"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/text_primary_light"
                android:text="EQUALIZER"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>